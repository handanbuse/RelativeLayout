<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/rbgcolor">


    <!-- KULLANICI 1 MESAJLAŞMA TASARIMI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor"
        android:id="@+id/mesajlasma_rkullanıcı1">

        <ImageView
            android:layout_width="96dp"
            android:src="@drawable/baseline_person_24"
            android:scaleType="fitXY"
            android:id="@+id/mesajlasma_imgKullanıcı"
            android:layout_height="96dp"></ImageView>

        <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mesajlasma_text1"
        android:text="Kullanıcı 1  "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
            android:layout_margin="5dp"
        android:layout_toRightOf="@id/mesajlasma_imgKullanıcı"
        android:layout_height="wrap_content"></TextView>

        <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mesajlasma_text2"
        android:text="Test mesajlaşma 1  "
        android:textSize="17sp"
            android:layout_margin="15dp"
        android:textColor="@color/black"

        android:layout_below="@id/mesajlasma_text1"
            android:layout_toRightOf="@id/mesajlasma_imgKullanıcı"
        android:layout_height="wrap_content"></TextView>


    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_marginTop="15dp"
    android:layout_below="@id/mesajlasma_rkullanıcı1"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="96dp"
        android:src="@drawable/baseline_person_24"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:id="@+id/mesajlasma_imgKullanıcı2"
        android:layout_height="96dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mesajlasma_kullanıcı2ADİ1"
        android:text="Kullanıcı 2"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/mesajlasma_imgKullanıcı2"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mesajlasma_kullanıcı3adi2"
        android:text="Test mesajlaşma 2  "
        android:textSize="17sp"
        android:layout_margin="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/mesajlasma_kullanıcı2ADİ1"
        android:layout_toLeftOf="@id/mesajlasma_imgKullanıcı2"
        android:layout_height="wrap_content"></TextView>


</RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/mesajlasma_edittext"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/mesajlasma_btn"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:inputType="textImeMultiLine"
        android:layout_height="40dp"></EditText>

    <Button
        android:layout_width="50dp"
        android:id="@+id/mesajlasma_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/baseline_send_24"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        ></Button>




</RelativeLayout>